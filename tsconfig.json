{
    "compilerOptions": {
        "outDir": "./out",
        "pretty": true,

        "lib": ["es2020"],        
        "target": "es2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        
        "declaration": false,        
        "sourceMap": true,
        
        "skipLibCheck": true,

        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "newLine": "lf",
        "preserveConstEnums": true,
        
        "noImplicitOverride": false,        
    },    
    "include": ["src"],
    "exclude": ["node_modules", ".vscode-test"],    
}
